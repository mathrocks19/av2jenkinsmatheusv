pipeline {
    agent any
    environment {
        DEPLOY_PROFILE = 'deploy'
    }
    stages {
        stage('Verificar Repositorio') {
            steps {
                script {
                    // Realiza o checkout do reposit√≥rio
                    checkout([$class: 'GitSCM',
                              branches: [[name: '*/main']],
                              userRemoteConfigs: [
                                  [
                                      url: 'https://github.com/mathrocks19/av2jenkinsmatheusv.git',
                                      credentialsId: 'matheus'
                                  ]
                              ]
                    ])
                }
            }
        }

        stage('Construir Imagem Docker') {
            steps {
                script {
                    def appName = 'av2jenkinsmatheusv'
                    def imageTag = "${appName}:${env.BUILD_ID}"
                    // Construa a imagem Docker com o perfil especificado
                    bat """
                        docker build --build-arg SPRING_PROFILES_ACTIVE=${DEPLOY_PROFILE} -t ${imageTag} .
                    """
                }
            }
        }

        stage('Fazer Deploy') {
            steps {
                script {
                    def appName = 'av2jenkinsmatheusv'
                    def imageTag = "${appName}:${env.BUILD_ID}"
                    // Parar e remover containers anteriores
                    bat """
                        docker stop ${appName} || exit 0
                        docker rm ${appName} || exit 0
                    """
                    // Subir o deploy com docker-compose
                    bat "docker-compose up -d --build"
                }
            }
        }
    }
    post {
        success {
            echo 'Deploy realizado com sucesso!'
        }
        failure {
            echo 'Houve um erro durante o deploy.'
        }
    }
}
